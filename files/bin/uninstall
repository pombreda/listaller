# Configuring destionation directory
INSTDIR="/opt/pappi"

# Configuration for mime-type registration
MIMEBASE="/usr/local/share/mime"
MIMEDB=$MIMEBASE"/packages"
MIMEFILE="pappi.xml"
APPDB="/usr/local/share/applications"
APPLIST="defaults.list"
APPLINIK_I="pappi_install.desktop"
APPLINIK_T="pappi_trust.desktop"

echo "This script removes ..."
echo "... symbolic link \"/usr/local/bin/pappi\""
echo "... directory \"$INSTDIR\" with all of its content."
echo "... mime type definition \"$MIMEDB/$MIMEFILE\""
echo "... desktop entry \"$APPDB/$APPLINIK_I\""
#echo "... desktop entry \"$APPDB/$APPLINIK_T\""
echo "... all lines containig \"$APPLINIK_I\" from \"$APPDB/$APPLIST\""
echo "... all lines containig \"$APPLINIK_T\" from \"$APPDB/$APPLIST\""
echo " "
echo -n "Do you want to proceed? [y/N] "
read PROCEED
echo " "
if [ "$PROCEED" = "y" ]; then
	echo -n "Uninstalling ..."

	rm /usr/local/bin/pappi
	rm -R $INSTDIR

	rm $MIMEDB/$MIMEFILE

	rm $APPDB/$APPLINIK_I
#	rm $APPDB/$APPLINIK_T

	cat $APPDB/$APPLIST | grep -v $APPLINIK_I > $APPDB/$APPLIST.tmp
	cat $APPDB/$APPLIST.tmp | grep -v $APPLINIK_T > $APPDB/$APPLIST
	rm $APPDB/$APPLIST.tmp

	echo "... all done. - Have a nice day!"
else
	echo "Doing nothing! - Have a nice day!"
fi

