Description: Change liCreator installation dir from /opt/appfiles.
 to /usr/lib to fulfill Debian standards.
Author: Matthias Klumpp <matthias@nlinux.org>
Last-Update: 2010-06-26

--- a/data/applications/licreator-gtk.desktop
+++ b/data/applications/licreator-gtk.desktop
@@ -9,7 +9,7 @@
 Exec=licreator-gtk
 GenericName=Create setup package
 GenericName[de]=Setup Paket erstellen
-Icon=/opt/appfiles/liCreator/listaller_creator-gtk.png
+Icon=listaller_creator-gtk.png
 MimeType=application/ips-script;
 StartupNotify=true
 Terminal=false
--- a/data/applications/licreator-qt.desktop
+++ b/data/applications/licreator-qt.desktop
@@ -9,7 +9,7 @@
 Exec=licreator-qt
 GenericName=Create setup package
 GenericName[de]=Setup Paket erstellen
-Icon=/opt/appfiles/liCreator/listaller_creator-qt.png
+Icon=listaller_creator-qt.png
 MimeType=application/ips-script;
 StartupNotify=true
 Terminal=false
--- a/src/install-creator.sh
+++ b/src/install-creator.sh
@@ -26,28 +26,27 @@
 #
 
 mkdir -p $DESTDIR$prefix/bin/
-mkdir -p $DESTDIR/opt/appfiles/ #NEEDS to be edited for prefix
-mkdir -p $DESTDIR/opt/appfiles/liCreator
+mkdir -p $DESTDIR/usr/lib/licreator
 mkdir -p $DESTDIR$prefix/share/applications
 mkdir -p $DESTDIR$prefix/share/pixmaps
 
 if [ "$WIDGET" == "qt4" ]; then
-cp '../build/qt4/licreator-qt' $DESTDIR/opt/appfiles/liCreator/
+cp '../build/qt4/licreator-qt' $DESTDIR/usr/lib/licreator
 cp "../data/applications/licreator-qt.desktop" $DESTDIR$prefix/share/applications/
-cp '../graphics/listaller_creator.png' $DESTDIR/opt/appfiles/liCreator/listaller_creator-qt.png
+cp '../graphics/listaller_creator.png' $DESTDIR/usr/share/pixmaps/listaller_creator-qt.png
 #Create symlink
 if [ ! -e "$DESTDIR$prefix/bin/licreator-qt" ]; then
  cd $DESTDIR$prefix/bin
- ln -s /opt/appfiles/liCreator/licreator-qt licreator-qt
+#  ln -s $DESTDIR/usr/lib/licreator/licreator-qt licreator-qt
 fi
 else
-cp '../build/gtk2/licreator-gtk' $DESTDIR/opt/appfiles/liCreator/
+cp '../build/gtk2/licreator-gtk' $DESTDIR/usr/lib/licreator
 cp "../data/applications/licreator-gtk.desktop" $DESTDIR$prefix/share/applications/
-cp '../graphics/listaller_creator.png' $DESTDIR/opt/appfiles/liCreator/listaller_creator-gtk.png
+cp '../graphics/listaller_creator.png' $DESTDIR/usr/share/pixmaps/listaller_creator-gtk.png
 #Create symlink
 if [ ! -e "$DESTDIR$prefix/bin/licreator-gtk" ]; then
  cd $DESTDIR$prefix/bin
- ln -s /opt/appfiles/liCreator/licreator-gtk licreator-gtk
+ ln -s $DESTDIR/usr/lib/licreator/licreator-gtk licreator-gtk
 fi
 fi
 
