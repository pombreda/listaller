#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

build: build-stamp

build-stamp:
	dh_testdir

	# Add here commands to compile the package.
	#Build Gtk2-release
	make WIDGET=gtk2 all
	make WIDGET=gtk2 licreator
	make WIDGET=gtk2 litheme
	#Build Qt4 release
	make WIDGET=qt4 all
	make WIDGET=qt4 licreator
	make WIDGET=qt4 litheme
	#docbook-to-man debian/listaller.sgml > listaller.1

	touch $@

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp

	# Add here commands to clean up after the build process.
	-$(MAKE) clean

	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_clean -k 
	dh_installdirs

	# Add here commands to install the package into debian/listaller.
	#Install common
        make DESTDIR=./debian/listaller-tools litools-inst
	make DESTDIR=./debian/listaller-data install-data
	#Install Gtk release
	make WIDGET=gtk2 DESTDIR=./debian/listaller-gtk install
	make WIDGET=gtk2 DESTDIR=./debian/listaller-creation-gtk licreator-inst
	make WIDGET=gtk2 DESTDIR=./debian/lithememgr-gtk litheme-inst
	#Install Qt4 release
	make WIDGET=qt4 DESTDIR=./debian/listaller-gtk install
	make WIDGET=qt4 DESTDIR=./debian/listaller-creation-gtk licreator-inst
	make WIDGET=qt4 DESTDIR=./debian/lithememgr-gtk litheme-inst

# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs 
#	dh_installdocs
	dh_installexamples
#	dh_install
#	dh_installmenu
#	dh_installdebconf	
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_python
#	dh_installinit
#	dh_installcron
#	dh_installinfo
	dh_installman
	dh_link
	dh_strip --dbg-package=listaller-gtk-dbg --dbg-package=listaller-tools-dbg --dbg-package=listaller-creation-gtk-dbg --dbg-package=lithememgr-gtk-dbg
	dh_compress
	dh_fixperms
#	dh_perl
#	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
