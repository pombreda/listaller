# Makefile for Listaller Project
#
# Targets:
# The First target is the one built when there is nothing on make command line
all:
	bash ./make-base
	%GTK+%bash ./make-gui WIDGET=gtk2
	%Qt%bash ./make-gui WIDGET=qt4

install:
	bash ./install-core prefix=%PREFIX% libdir=%LIBDIR%
	bash ./install-tools prefix=%PREFIX% libdir=%LIBDIR%
	bash ./install-data prefix=%PREFIX% libdir=%LIBDIR%
	%GTK+%bash ./install-gui WIDGET=gtk2 prefix=%PREFIX% libdir=%LIBDIR%
	%Qt%bash ./install-gui WIDGET=qt4 prefix=%PREFIX% libdir=%LIBDIR%
	%DEV%bash ./install-dev prefix=%PREFIX% libdir=%LIBDIR%

install-binonly:
	bash ./install-core prefix=%PREFIX% libdir=%LIBDIR%
	bash ./install-tools prefix=%PREFIX% libdir=%LIBDIR%
	%GTK+%bash ./install-gui WIDGET=gtk2 prefix=%PREFIX% libdir=%LIBDIR%
	%Qt%bash ./install-gui WIDGET=qt4 prefix=%PREFIX% libdir=%LIBDIR%

install-data:
	bash ./install-data prefix=%PREFIX% libdir=%LIBDIR%

install-tools:
	bash ./install-core prefix=%PREFIX% libdir=%LIBDIR%
	bash ./install-tools prefix=%PREFIX% libdir=%LIBDIR%

install-front:
	bash ./install-core prefix=%PREFIX% libdir=%LIBDIR%
	%GTK+%bash ./install-gui WIDGET=gtk2 prefix=%PREFIX% libdir=%LIBDIR%
	%Qt%bash ./install-gui WIDGET=qt4 prefix=%PREFIX% libdir=%LIBDIR%

srcdoc:
	bash ./writedoc

clean:
	bash ./clean.sh

uninstall:
	bash ./uninstall prefix=%PREFIX% libdir=%LIBDIR%
