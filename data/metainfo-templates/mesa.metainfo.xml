<?xml version="1.0" encoding="utf-8"?>
<!--
 The Mesa3D OpenGL implementation
 OpenGL vendor libs are included here too, so depscan counts them as belonging to Mesa
-->
<component>
  <id>Mesa3D</id>
  <name>Mesa 3D</name>
  <provides>
    <library>libGL.so.*</library>
    <library>libGLU.so.*</library>
    <!-- OPTIONAL:
         libnvidia-tls.so.*
         libnvidia-glcore.so.* -->
  </provides>
</component>
